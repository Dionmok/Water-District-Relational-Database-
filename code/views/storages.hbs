<h1>Storages</h1>
Add a new Storage.
<hr /><br />

<table class="table table-striped table-bordered border-success">
  <thead>
    <tr>
      <th>Storage ID</th>
      <th>Storage Capacity</th>
      <th>Storage Type</th>
      <th>Cover Type</th>
      <th>Material</th>
    </tr>
  </thead>

  <tbody>
    {{#each data}}
      <tr storageValue={{this.storageID}}>
        <td>{{this.storageID}}</td>
        <td>{{this.storageCapacity}}</td>
        <td>{{this.storageTypesStorageType}}</td>
        <td>{{this.isCovered}}</td>
        <td>{{this.materialsMaterial}}</td>        
      </tr>
    {{/each}}
  </tbody>
</table>

<hr /><br />

<table class="table table-striped table-bordered border-success">
  <thead>
    <caption>Addresses</caption>
    <tr>
      <th>Address ID</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
    </tr>
  </thead>

  <tbody>
    {{#each addresses}}
      <tr addressValue={{this.addressID}}>
        <td>{{this.addressID}}</td>
        <td>{{this.street}}</td>
        <td>{{this.city}}</td>
        <td>{{this.state}}</td>
        <td>{{this.zip}}</td>        
      </tr>
    {{/each}}
  </tbody>
</table>

