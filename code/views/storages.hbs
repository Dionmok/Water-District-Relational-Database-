<div id="insert" style="display: block">
  <form method="POST" id="add-storage-form-ajax">
    <legend><strong>Add Storage</strong></legend>
    <fieldset class="fields">
      <label> Storage Capacity </label>
      <input type="text" id="input-storage-capacity" />
      </select>
      <label> Storage Type</label> <select type="text" id="input-storage-type">
            {{#each storagetypes}}
            <option value="{{this.storageType}}">{{this.storageType}}</option>
            {{/each}}
      </select>
      </select>
      <label> Is Covered </label> <select type="text" id="input-is-covered">
            <option value="0">Uncovered</option>
            <option value="1">Covered</option>
      </select>
      <label> Material</label> <select type="text" id="input-material">
            {{#each material}}
            <option value="{{this.material}}">{{this.material}}</option>
            {{/each}}
      </select>
            <label> Address ID</label> <select type="text" id="input-address-id">
            {{#each addresses}}
            <option value="{{this.addressID}}">{{this.addressID}}</option>
            {{/each}}
      </select>
      <label> Source Name</label> <select type="text" id="input-source-name">
            {{#each sources}}
            <option value="{{this.sourceName}}">{{this.sourceName}}</option>
            {{/each}}
      </select>
    </fieldset>
    <input
      class="btn btn-success"
      type="submit"
      id="addStorage"
      value="Add a Storage"
    />
  </form>
  <script src="../public/js/add-storages.js"></script>
