<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<h1>Addresses</h1>

    Add a new address and associate it with an existing customer.
    <hr><br>

    <table id="address-table" class="table table-striped table-bordered border-success">
        <thead>
            <caption>Addresses</caption>
            <tr>
                <th>AddressID</th>
                <th>Street</th>
                <th>City</th>
                <th>State</th>
                <th>Zip</th>
                <th>CustomerId</th>
            </tr>
        </thead>

        <tbody>
            {{#each addresses}}
            <tr addressIDvalue={{this.addressID}}>
                <td>{{this.addressID}}</td>
                <td>{{this.street}}</td>
                <td>{{this.city}}</td>
                <td>{{this.state}}</td>
                <td>{{this.zip}}</td>
                <td>{{this.customerscustomerID}}</td>                
            </tr>
            {{/each}}            
        </tbody>
    </table>

    <hr><br>

    <table class="table table-striped table-bordered border-success">
        <thead>
            <caption>Customers</caption>
            <tr>
                <th>Customer Id</th>
                <th>Potable Water</th>
                <th>Recycled Water</th>
                <th>Occupant Type</th>
                <th>Street</th>
                <th>City</th>
                <th>State</th>
                <th>Zip</th>
            </tr>
        </thead>

        <tbody>
        {{#each customers}}
        <tr customerIDvalue={{this.customerID}}>
            <td>{{this.customerID}}</td>
            <td>{{this.potableWater}}</td>
            <td>{{this.recycledWater}}</td>
            <td>{{this.occupantTypesOccupantType}}</td>
            <td>{{this.street}}</td>
            <td>{{this.city}}</td>
            <td>{{this.state}}</td>
            <td>{{this.zip}}</td>
        </tr>
        {{/each}}
        </tbody>
    </table>

    <hr><br>

    <div id="insert" style="display: block">
        <form method="POST" id="add-address-form-ajax">
            <legend><strong>Add Address</strong></legend>
            <fieldset class="fields">
                <label> Street </label> <input type="text" id="street-input">
                <label> City </label> <input type="text" id="city-input">
                <label> State </label> <input type="text" id="state-input">
                <label> Zip </label> <input type="text" id="zip-input">
                <label> Customer </label> <select type="text" id="customerID-input">
                   {{#each customers}}
                    <option value="{{this.customerID}}">{{this.customerID}}</option>
                    {{/each}}
                </select>
            </fieldset>
            <input class="btn btn-success" type="submit" id="addAddress" value="Add an Address">
        </form>
        <script src="../public/js/add-address.js"></script>
        <!--add new address-->
    </div><!-- insert -->